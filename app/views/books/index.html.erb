
<h1>Books</h1>

<% @books.each do |book| %>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  <span><%= book.title %></span>
  </table>

<% end %>


<h2>New book</h2>

<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <h4><%= f.submit 'Create Book' %></h4>
<% end %>